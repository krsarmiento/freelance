{% extends 'layout.html.twig' %}

{% block custom_js %}
<script type="text/javascript" src="{{assets}}/js/functions.js"></script>
{% endblock %}


{% block body %}

<button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#movieModal">
  Launch demo modal
</button>

<div class="container pt">
    <div class="row mt">
        <div class="col-lg-6 col-lg-offset-3 centered">
            <h3>Movies</h3>
            <hr>
            <button class="btn btn-lg btn-warning" data-toggle="modal" data-target="#myModal">
                <span class="glyphicon glyphicon-facetime-video" style="color: white; font-size: 15px"></span> 
                App Info
            </button>
        </div>
    </div>
</div>

<!-- +++++ First Post +++++ -->
<div id="grey">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                <p>
                    <a href="http://www.aha-soft.com" target="_blank" style="cursor: default">
                        <img src="{{assets}}/img/trailer.png" width="50px" height="50px">
                    </a>
                <ba>My Ratings</ba>
                </p>
                {% include 'include/ratings.html.twig' %}
            </div>
        </div><!-- /row -->
    </div> <!-- /container -->
</div><!-- /grey -->

<!-- +++++ Second Post +++++ -->
<div id="white">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                <p>
                    <a href="http://www.aha-soft.com" target="_blank" style="cursor: default">
                        <img src="{{assets}}/img/cinema.png" width="50px" height="50px">
                    </a>
                <ba>Most Viewed</ba>
                </p>
                {% include 'include/most_viewed.html.twig' %}
            </div>
        </div><!-- /row -->
    </div> <!-- /container -->
</div><!-- /white -->



<!-- Modals -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">App Info</h4>
            </div>
            <div class="modal-body" style="text-align: center">
                <p>
                    I'm a huge movie fan and, for the sake of boredom and to prove I know how to do a "Hello World!", 
                    I decided to create a mini movie app using my IMDb account and the OMDb API. 
                </p>
                <p>
                    You are free to call it however you want, but I like to name it <br/>
                    <strong>Super Movie App That Can Rate Using Float Numbers Unlike IMDb</strong>, or <em>SMATCRUFNUI</em>.
                </p>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="movieModal" tabindex="-1" role="dialog" aria-labelledby="movieModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="movieModalTitle">A Separation (2011)</h4>
      </div>
      <div class="modal-body">
          
          
          <div class="row">
              
            <div class="col-md-6">
                
                <div id="movieModalPoster">
                    <img src="http://ia.media-imdb.com/images/M/MV5BMTYzMzU4NDUwOF5BMl5BanBnXkFtZTcwMTM5MjA5Ng@@._V1_SX214_.jpg"/>
                </div>
                
            </div>
              
            <div class="col-md-6">

                <h2>Plot</h2>
                
                <div id="movieModalPlot">
                    A married couple are faced with a difficult decision - to improve the life of their child by moving to another country or to stay in Iran and look after a deteriorating parent who has Alzheimer's disease.
                </div>
                
                <hr/>

                <h2>Ratings</h2>
                
                <div class="row" style="font-size: 20px">
                
                    <div class="col-md-6">
                        My Rating
                        <br/>
                        IMDb
                        <br/>
                        Metacritic
                    </div>
                    
                    <div class="col-md-6" style="font-family: Courier New">
                        <span class="label label-primary" id="movieModalMyRating">9.0</span>
                        <br/>
                        <span class="label label-warning" id="movieModalImdbRating" style="background-color: #DDCC00; color: #000">8.5</span>
                        <br/>
                        <span class="label label-success" id="movieModalMetacriticRating" style="background-color: #6c3">9.5</span>
                    </div>

                </div>
                
            </div>

              
          </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <a class="btn btn-warning" id="movieModalImdbUrl" target="_blank" href=" imdb_url  movie.code ">Watch on IMDb</a>
      </div>
    </div>
  </div>
</div>


{% endblock %}